<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Name>Emoncms</Name>
  <Beta>False</Beta>
  <Category>Productivity:</Category>
  <Date>2020-03-18</Date>
  <Support>http://lime-technology.com/forum/index.php?topic=43610.0</Support>
  <Overview>Energy monitor</Overview>
  <Description></Description>
  <Registry>https://registry.hub.docker.com/u/openenergymonitor/emoncms</Registry>
  <Repository>openenergymonitor/emoncms</Repository>
  <DonateText>Buy me a beer.</DonateText>
  <DonateImg>https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif</DonateImg>
  <DonateLink>https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=FDMP56NCG5A26&source=url</DonateLink>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Environment>
    <Variable>
      <Name>MYSQL_PASSWORD</Name>
      <Value>emoncms</Value>
    </Variable>
  </Environment>
  <Networking>
    <Mode>bridge</Mode>
	<Publish>
	  <Port>
        <HostPort>8998</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
	  <Port>
        <HostPort>3307</HostPort>
        <ContainerPort>3306</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/emoncms/mysql</HostDir>
      <ContainerDir>/var/lib/mysql</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/emoncms/data</HostDir>
      <ContainerDir>/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/emoncms/phpfina</HostDir>
      <ContainerDir>/var/opt/emoncms/phpfina</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/emoncms/phptimeseries</HostDir>
      <ContainerDir>/var/opt/emoncms/phptimeseries</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:8998]/</WebUI>
  <Banner>http://emoncms.org/Modules/site/emoncms_front.png</Banner>
  <Icon>http://emoncms.org/Modules/site/emoncms_front.png</Icon>
</Container>
